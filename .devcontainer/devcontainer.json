{
	"name": "Notcurses Dev",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"remoteUser": "root",
	"workspaceFolder": "/workspace",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind"
	],
	"postCreateCommand": "ldconfig",
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools"
	],
}
