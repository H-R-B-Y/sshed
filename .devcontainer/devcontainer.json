{
	"name": "Notcurses Dev",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"-p", "2222:2222"
	],
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"remoteUser": "root",
	"workspaceFolder": "/workspace",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind"
	],
	"forwardPorts": [2222],
	"portsAttributes": {
		"2222": {
			"label": "SSH Game Server",
			"protocol": "tcp",
		}
	},
	"postCreateCommand": "ldconfig && /usr/sbin/sshd",
	"postStartCommand": "/usr/sbin/sshd",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"kube.42header",
				"DoKca.42-ft-count-line",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cmake-tools",
				"cschlosser.doxdocgen"
			]
		}
	}
}
